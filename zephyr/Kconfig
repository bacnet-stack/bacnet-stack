	help
	  Enable BACnet ARCNET datalink

config BACDL_BIP
	bool "BACnet BIP datalink"
	select NETWORKING
	select NET_SOCKETS
	select NET_UDP
	select NET_IPV4
	select NET_DHCPV4
	select NET_IPV4_AUTO
	help
	  Enable BACnet BIP datalink

